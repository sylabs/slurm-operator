Bootstrap: docker
From: golang:alpine
Stage: builder

%files
	. /usr/local/go/src/github.com/sylabs/wlm-operator

%post
	export PATH=$PATH:/usr/local/go/bin
	export HOME=/root
	export GOPATH=/go

	apk update
	apk add git && apk add ca-certificates
	cd /usr/local/go/src/github.com/sylabs/wlm-operator
	CGO_ENABLED=0 go build -ldflags "-X main.version=`(git describe  --dirty --always 2>/dev/null || echo "unknown") \
    	                        | sed -e "s/^v//;s/-/_/g;s/_/-/;s/_/./g"`" \
    	                        -o main cmd/operator/main.go

Bootstrap: library
From: library/default/busybox:1.28
Stage: two

%files from builder
	/etc/ssl/certs/ca-certificates.crt
	/etc/passwd
	/usr/local/go/src/github.com/sylabs/wlm-operator/main /

%runscript
	exec ./main "$@"
